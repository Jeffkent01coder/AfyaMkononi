<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crdContent"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/anyImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/docsimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personMeet"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:text="Dr. Mim Akhter" />

            <TextView
                android:id="@+id/appointmentTitle"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="Cardiologist in apolo hospital"
                app:drawableStartCompat="@drawable/ic_baseline_mode_edit_24" />

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="Argwings Kodhek Road"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="12:00 - 13:00"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />
            <TextView
                android:id="@+id/eventDate"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:text="12//12/2024"
                app:drawableStartCompat="@drawable/ic_baseline_calendar_month_24" />



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>